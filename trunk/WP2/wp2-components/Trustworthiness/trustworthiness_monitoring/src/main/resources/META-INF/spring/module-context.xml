<?xml version="1.0" encoding="UTF-8"?>
<beans xmlns="http://www.springframework.org/schema/beans"
	xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
	xsi:schemaLocation="http://www.springframework.org/schema/beans http://www.springframework.org/schema/beans/spring-beans.xsd">

	<bean name="configBuilder"
		class="org.apache.commons.configuration.DefaultConfigurationBuilder">
		<constructor-arg value="configuration/config.xml" />
	</bean>

	<bean id="configService"
		class="eu.aniketos.trustworthiness.impl.configuration.ConfigurationService">
		<!-- <property name="logger" ref="log4jLogger"></property> -->
		<property name="configBuilder" ref="configBuilder"></property>
	</bean>
	
</beans>
