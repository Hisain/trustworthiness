<?xml version="1.0" encoding="UTF-8"?>
<persistence xmlns="http://java.sun.com/xml/ns/persistence"
	xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
	xsi:schemaLocation="http://java.sun.com/xml/ns/persistence http://java.sun.com/xml/ns/persistence/persistence_1_0.xsd"
	version="1.0">
	<!-- author: Hisain Elshaafi (TSSG) -->
	<persistence-unit name="trust" transaction-type="RESOURCE_LOCAL">
		
		<!-- <class>eu.aniketos.wp2.components.trustworthiness.impl.trust.pojo.Service</class> -->
		<class>eu.aniketos.wp2.components.trustworthiness.impl.trust.pojo.Composite</class>
		<class>eu.aniketos.wp2.components.trustworthiness.impl.trust.pojo.Atomic</class>
		<class>eu.aniketos.wp2.components.trustworthiness.impl.trust.pojo.Rating</class>
		<class>eu.aniketos.wp2.components.trustworthiness.impl.trust.pojo.QoSMetric</class>
		<class>eu.aniketos.wp2.components.trustworthiness.impl.trust.pojo.SecProperty</class>
		<class>eu.aniketos.wp2.components.trustworthiness.impl.trust.pojo.ThreatLevel</class>
		<class>eu.aniketos.wp2.components.trustworthiness.impl.trust.pojo.TrustworthinessEntity</class>
		<exclude-unlisted-classes>true</exclude-unlisted-classes>
		<properties>
			<property name="hibernate.query.factory_class"
				value="org.hibernate.hql.classic.ClassicQueryTranslatorFactory"/>
			<property name="hibernate.hbm2ddl.auto" value="update" />
			<property name="hibernate.show_sql" value="false" />
			<property name="hibernate.cache.provider_class" value="org.hibernate.cache.HashtableCacheProvider" />
		</properties>

	</persistence-unit>

</persistence>