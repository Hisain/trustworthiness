<?xml version="1.0" encoding="UTF-8"?>
<beans xmlns="http://www.springframework.org/schema/beans"
	xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xmlns:osgi="http://www.springframework.org/schema/osgi"
	xmlns:tx="http://www.springframework.org/schema/tx"
	xsi:schemaLocation="http://www.springframework.org/schema/beans http://www.springframework.org/schema/beans/spring-beans.xsd
                      http://www.springframework.org/schema/osgi http://www.springframework.org/schema/osgi/spring-osgi.xsd
                      http://www.springframework.org/schema/tx http://www.springframework.org/schema/tx/spring-tx.xsd
                      ">
	<osgi:reference id="configService"
		interface="eu.aniketos.wp2.components.trustworthiness.configuration.ConfigurationManagement" />

	<osgi:reference id="serviceEntityService"
		interface="eu.aniketos.wp2.components.trustworthiness.trust.service.ServiceEntityService" />

	<osgi:reference id="ratingEntityService"
		interface="eu.aniketos.wp2.components.trustworthiness.trust.service.RatingEntityService" />

	<osgi:reference id="qosEntityService"
		interface="eu.aniketos.wp2.components.trustworthiness.trust.service.QoSMetricEntityService" />

	<osgi:reference id="securityEntityService"
		interface="eu.aniketos.wp2.components.trustworthiness.trust.service.SecurityEntityService" />

	<osgi:reference id="trustFactory"
		interface="eu.aniketos.wp2.components.trustworthiness.trust.management.TrustFactory" />

	<osgi:service ref="serviceManagement"
		interface="eu.aniketos.wp2.components.trustworthiness.messaging.ServiceManagement" />

	<osgi:service ref="qosMetric"
		interface="eu.aniketos.wp2.components.trustworthiness.messaging.QosMetricsService" />

	<osgi:service ref="reputationMetric"
		interface="eu.aniketos.wp2.components.trustworthiness.messaging.ReputationMetricsService" />

	<osgi:service ref="securityMetric"
		interface="eu.aniketos.wp2.components.trustworthiness.messaging.SecurityMetricsService" />

	<osgi:reference id="eventAdminService" interface="org.osgi.service.event.EventAdmin" />

	<osgi:reference id="transactionManager"
		interface="org.springframework.transaction.PlatformTransactionManager" />
	<tx:annotation-driven transaction-manager="transactionManager" />
</beans>
