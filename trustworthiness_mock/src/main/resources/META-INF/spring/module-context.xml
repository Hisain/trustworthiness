<?xml version="1.0" encoding="UTF-8"?>
<beans xmlns="http://www.springframework.org/schema/beans"
	xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
	xsi:schemaLocation="http://www.springframework.org/schema/beans http://www.springframework.org/schema/beans/spring-beans.xsd">

	<bean id="serviceRegistration"
		class="eu.aniketos.wp2.components.trustworthiness.mock.messaging.ServiceRegistration"
		init-method="initialize">
		<constructor-arg>
			<ref bean="serviceManagement" />
		</constructor-arg>
	</bean>
	
	<bean id="repTest"
		class="eu.aniketos.wp2.components.trustworthiness.mock.messaging.ReputationRatings"
		init-method="initialize">
		<constructor-arg>
			<ref bean="reputationMetric" />
		</constructor-arg>
	</bean>
	
	<bean id="securityTest"
		class="eu.aniketos.wp2.components.trustworthiness.mock.messaging.SecurityProperties"
		init-method="initialize">
		<constructor-arg>
			<ref bean="securityMetric" />
		</constructor-arg>
	</bean> 
	
	<bean id="qosTest"
		class="eu.aniketos.wp2.components.trustworthiness.mock.messaging.QoSMetrics"
		init-method="initialize">
		<constructor-arg>
			<ref bean="qosMetric" />
		</constructor-arg>
	</bean>
	
	
	<bean id="twRequestTest"
		class="eu.aniketos.wp2.components.trustworthiness.mock.trust.management.atomic.TrustworthinessRequest"
		init-method="requestTrustworthiness">
		<constructor-arg>
			<ref bean="trustworthinessPredictionService" />
		</constructor-arg>
		<constructor-arg>
			<ref bean="compositeTrustworthinessPredictionService" />
		</constructor-arg>
	</bean> 
	
	<bean id="alertEventHandler"
		class="eu.aniketos.wp2.components.trustworthiness.mock.trust.alerts.Notification">
	</bean>

</beans>
