<?xml version="1.0" encoding="UTF-8"?>
<beans xmlns="http://www.springframework.org/schema/beans"
	xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
	xsi:schemaLocation="http://www.springframework.org/schema/beans http://www.springframework.org/schema/beans/spring-beans.xsd">

	<bean id="serviceRegistrationMock"
		class="eu.aniketos.trustworthiness.mock.monitoring.ServiceRegistration"
		init-method="initialize">
		<constructor-arg>
			<ref bean="serviceManagement" />
		</constructor-arg>
	</bean>
	
	<bean id="repMock"
		class="eu.aniketos.trustworthiness.mock.monitoring.ReputationRatings"
		init-method="initialize">
		<constructor-arg>
			<ref bean="reputationMetric" />
		</constructor-arg>
	</bean>
	
	<bean id="securityMock"
		class="eu.aniketos.trustworthiness.mock.monitoring.SecurityProperties"
		init-method="initialize">
		<constructor-arg>
			<ref bean="securityMetric" />
		</constructor-arg>
	</bean> 
	
	<bean id="qosTest"
		class="eu.aniketos.trustworthiness.mock.monitoring.QoSMetrics"
		init-method="initialize">
		<constructor-arg>
			<ref bean="qosMetric" />
		</constructor-arg>
	</bean>
 
	
	<bean id="twRequestMock"
		class="eu.aniketos.trustworthiness.mock.prediction.management.TrustworthinessRequest"
		init-method="requestTrustworthiness">
		<constructor-arg>
			<ref bean="trustworthinessPredictionService" />
		</constructor-arg>
		<constructor-arg>
			<ref bean="compositeTrustworthinessPredictionService" />
		</constructor-arg>
	</bean> 
	
	<bean id="alertEventHandler"
		class="eu.aniketos.trustworthiness.mock.prediction.alerts.Notification">
	</bean>

</beans>
